<body>
    <div>
        <h2>Log in</h2>

        <form class="login-form" action="/login" method="POST">
            <label> Username
                <input type="text" name="username" placeholder="username"/>
            </label>

            <label> Password
                <input type="password" name="password" placeholder="*******"/>
            </label>
            <button class="submit-btn" type="submit">Log in</button>
        </form>
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
    </div>
</body>